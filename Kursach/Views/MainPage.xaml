<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursach.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20"
                             VerticalOptions="Center">
            
            <Image Source="icon.png" WidthRequest="180" 
                   HorizontalOptions="Center"/>

            <Label 
                Text="Добро пожаловать!" TextColor="Black"
                FontSize="30" FontAttributes="Bold"
                HorizontalTextAlignment="Center"/>

            <Border Stroke="Black" StrokeThickness="3">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Entry Placeholder="Введите логин"
                       FontAttributes="Bold" HeightRequest="50"
                       FontSize="20"/>
            </Border>

            <Border Stroke="Black" StrokeThickness="3">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Entry Placeholder="Введите пароль" IsPassword="True"
                       FontAttributes="Bold" HeightRequest="50"
                       FontSize="20"/>
            </Border>

            <Button Text="Войти" BackgroundColor="Black" 
                    TextColor="White" FontAttributes="Bold"
                    FontSize="20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>


